	z-index 5
	
	#wdcl
		bgimg url(../img/wdcl.png)
		
	#jtjsl
		bgimg url(../img/jtjsl.png)
		
.bshow
	position fixed
	top 60vw
	left 5vw
	size 90vw 70vw
	box-sizing border-box
	padding-top 50vw
