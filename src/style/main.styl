	#da-c
		bgimg url(../img/da-c.png)
		
	#da-d
		bgimg url(../img/da-d.png)

.phb
	size 90vw 155vw
	position fixed
	z-index 3
	top 5vw
	left 5vw
	box-sizing border-box
	padding-top 30vw
	bgimg url(../img/phbbg.png)
	
	.p-mc
		float right
		clear both
		font-size 8vw
		padding-right 24vw
		color rgb(253, 162, 90)
		text-shadow -1px 1px red
		
	.p-p
		transform translate(0, 17vw)
		margin 0 auto
		size 75vw 72vw
		overflow-y auto
		
	.pp-im
		size 100% 16vw
		clear both
		overflow hidden
		
		.ppi-ava
			border-radius 50%
			size 11vw
			margin 1.8vw 3vw
			float left
			bgimg ''
			clear left
			border .1vw solid #ccc
			
		.ppi-name
			size 40vw 100%
			text-align center
			font-size 4.5vw
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
			float left
			line-height 15vw
			color #666
		
		.ppi-stand
			float left
			size 7vw 9vw
			font-size 5vw
			margin 3vw 0
			margin-left 3vw
			text-align center
			line-height @height
			bgimg ''
			color #333
			clear right
		























