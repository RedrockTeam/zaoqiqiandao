@import './utils.styl'

*
	margin 0
	padding 0
	font-family 'arial', 'weiruanyahei'
	
.bg
	background url(../img/bg.png) no-repeat center center / 100% 100%
	size 100vw 100vh
	position fixed
	z-index -1
	
.cover
	size 100vw 100vh
	position fixed
	left 0
	top 0
	z-index 4
	background rgba(0,0,0, .5)

.main
	background url(../img/main.png) no-repeat center center / 100% 100%
	size 100vw 140vw
	position fixed
	z-index 1
	top 10vw
	box-sizing border-box
	padding 0 10vw
	padding-top 78vw
	font-size 3.6vw
	color #555
	overflow hidden
	
	.m-p
		size 100% 30vw
	
	.m-b
		size 35vw 12vw
		float left
		margin 7vw 0 0 0 
	
	#qd
		margin-right 7vw
		bgimg url(../img/pd.png)

	#phb
		margin-left 0
		bgimg url(../img/phb.png)
		
.ashow
	position fixed
	top 60vw
	left 5vw
	size 90vw 60vw
	box-sizing border-box
	padding-top 40vw
	
	.a-b
		size 35vw 12vw
		float left
		margin-left 6vw
				

#hdcw
	bgimg url(../img/hdcw.png)
	z-index 5
	
	#xczl
		bgimg url(../img/xczl.png)
		
	#zjzl
		bgimg url(../img/zjzl.png)
		
#fqqd
