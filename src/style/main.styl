	.b-b
		size 34vw 13vw
		margin 0 auto
		bgimg url(../img/fh.png)

#qdsb
	bgimg url(../img/qdsb.png)

.ques
	size 90vw 100vw
	z-index 3
	bgimg url(../img/ques.png)
	position fixed
	top 45vw
	left 5vw
	
	#q-m
		size 84vw auto
		text-align center
		font-size 5vw
		color #222
		padding-top 20vw
		padding-bottom 5vw
		
